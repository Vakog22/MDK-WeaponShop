<Window x:Class="MockUp914.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MockUp914"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <WrapPanel HorizontalAlignment="Stretch" Height="40">
                <Button Content="Выход" x:Name="btn_Exit" Click="btn_Exit_Click"/>
                <Label Content="АААААААААААААААААААА"/>
                <TextBlock Text="25:61"/>
            </WrapPanel>
            <WrapPanel Height="40">
                <Button Content="Каталог" x:Name="btn_Catalogue" Click="btn_Catalogue_Click"/>
                <Button Content="Продажи" x:Name="btn_Sales" Click="btn_Sales_Click"/>
                <Button Content="Пользователи" x:Name="btn_Users" Click="btn_Users_Click"/>
            </WrapPanel>
            <Frame Height="600" x:Name="f_MainFrame" NavigationUIVisibility="Hidden" x:FieldModifier="public"/>
        </StackPanel>
    </Grid>
</Window>
