<Page x:Class="MockUp914.Pages.Catalogue.CataloguePageEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MockUp914.Pages.Catalogue"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="CataloguePageEdit">

    <Grid>
        <StackPanel>
            <TextBlock Text="Название"/>
            <TextBox Width="1000" Name="tb_title"/>
            <TextBlock Text="Стоимость"/>
            <TextBox Width="1000" Name="tb_Cost"/>
            <TextBlock Text="Фото"/>
            <Button Content="Изменить фото" x:Name="btn_addPhoto" Click="btn_addPhoto_Click"/>
            <Image x:Name="i_Preview" Width="200" Height="200"/>
            <TextBlock Text="Тип"/>
            <ComboBox x:Name="cb_type"/>
            <TextBlock Text="Лицензия"/>
            <ComboBox x:Name="cb_license"/>
            <WrapPanel>
                <Button Content="Сохранить" x:Name="btn_Save" Click="btn_Save_Click"/>
                <Button Content="Отмена" Click="btn_Cancel_Click" x:Name="btn_Cancel"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
