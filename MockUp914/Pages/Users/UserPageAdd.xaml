<Page x:Class="MockUp914.Pages.Users.UserPageAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MockUp914.Pages.Users"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPageAdd">

    <Grid>
        <StackPanel>
            <TextBlock Text="Имя"/>
            <TextBox x:Name="tb_FirstName"/>
            <TextBlock Text="Фамилия"/>
            <TextBox x:Name="tb_LastName"/>
            <TextBlock Text="Отчество"/>
            <TextBox x:Name="tb_Patronymic"/>
            <TextBlock Text="Пасспорт"/>
            <TextBox x:Name="tb_Passport"/>
            <TextBlock Text="Дата рождения"/>
            <DatePicker x:Name="tb_DateOfBirth"/>
            <TextBlock Text="Телефон"/>
            <TextBox x:Name="tb_Phone"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="tb_Username"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="tb_Password"/>
            <Button Content="Добавить" x:Name="btn_Add" Click="btn_Add_Click"/>
            <Button Content="Отмена" Name="btn_Cancel" Click="btn_Cancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
